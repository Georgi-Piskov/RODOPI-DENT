      "parameters": {
        "jsCode": "// Parse callback data\nconst callback = $input.first().json;\nconst callbackData = callback.callback_query.data;\nconst messageId = callback.callback_query.message.message_id;\nconst chatId = callback.callback_query.message.chat.id;\n\n// Expected format: confirm_30_apt_xxx or cancel_apt_xxx\nlet action, duration, appointmentId;\n\nif (callbackData.startsWith('confirm_')) {\n  // confirm_30_apt_xxx\n  const parts = callbackData.split('_');\n  action = 'confirm';\n  duration = parseInt(parts[1]);\n  appointmentId = parts.slice(2).join('_'); // apt_xxx\n} else if (callbackData.startsWith('cancel_')) {\n  // cancel_apt_xxx\n  action = 'cancel';\n  duration = 0;\n  appointmentId = callbackData.replace('cancel_', '');\n} else {\n  return [{ json: { error: 'Unknown action', valid: false } }];\n}\n\nreturn [{\n  json: {\n    action: action,\n    duration: duration,\n    appointmentId: appointmentId,\n    messageId: messageId,\n    chatId: chatId,\n    valid: true\n  }\n}];"
      },
      "id": "parse-callback",
      "name": "Parse Callback",
