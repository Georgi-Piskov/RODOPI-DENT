    {
      "parameters": {
        "jsCode": "// Find the appointment and check for conflicts if confirming with longer duration\nconst parsed = $('Parse Callback').first().json;\nconst appointments = $('Get Appointment').all();\n\n// Find target appointment\nconst apt = appointments.find(a => a.json.id === parsed.appointmentId);\n\nif (!apt) {\n  return [{ json: { error: '–ó–∞–ø–∏—Å—ä—Ç –Ω–µ –µ –Ω–∞–º–µ—Ä–µ–Ω', valid: false, action: 'error' } }];\n}\n\nif (apt.json.status !== 'pending') {\n  return [{ json: { error: '–ó–∞–ø–∏—Å—ä—Ç –≤–µ—á–µ –µ –æ–±—Ä–∞–±–æ—Ç–µ–Ω', valid: false, action: 'already_processed' } }];\n}\n\n// If cancelling, no need to check conflicts\nif (parsed.action === 'cancel') {\n  return [{\n    json: {\n      ...apt.json,\n      action: 'cancel',\n      newStatus: 'cancelled',\n      messageId: parsed.messageId,\n      chatId: parsed.chatId,\n      valid: true\n    }\n  }];\n}\n\n// Confirming - check if new duration causes conflicts\nconst newDuration = parsed.duration;\n\nfunction timeToMinutes(time) {\n  const [hours, minutes] = time.split(':').map(Number);\n  return hours * 60 + minutes;\n}\n\nconst aptStart = timeToMinutes(apt.json.startTime);\nconst aptEnd = aptStart + newDuration;\n\n// Check conflicts with other appointments\nlet hasConflict = false;\nlet conflictWith = null;\n\nfor (const other of appointments) {\n  if (other.json.id === apt.json.id) continue;\n  if (other.json.date !== apt.json.date) continue;\n  if (other.json.status === 'cancelled' || other.json.status === 'expired') continue;\n  \n  const otherStart = timeToMinutes(other.json.startTime);\n  const otherDuration = other.json.status === 'pending' ? 30 : (parseInt(other.json.duration) || 30);\n  const otherEnd = otherStart + otherDuration;\n  \n  // Check overlap\n  if (aptStart < otherEnd && aptEnd > otherStart) {\n    hasConflict = true;\n    conflictWith = {\n      time: other.json.startTime,\n      name: other.json.patientName,\n      status: other.json.status\n    };\n    break;\n  }\n}\n\nif (hasConflict) {\n  return [{\n    json: {\n      ...apt.json,\n      action: 'conflict',\n      conflictWith: conflictWith,\n      requestedDuration: newDuration,\n      messageId: parsed.messageId,\n      chatId: parsed.chatId,\n      valid: false\n    }\n  }];\n}\n\n// No conflict - proceed with confirmation\nreturn [{\n  json: {\n    ...apt.json,\n    action: 'confirm',\n    newStatus: 'confirmed',\n    newDuration: newDuration,\n    messageId: parsed.messageId,\n    chatId: parsed.chatId,\n    valid: true\n  }\n}];"
      },
