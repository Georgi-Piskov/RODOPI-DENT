    {
      "parameters": {
        "jsCode": "// Get date from query parameter\nconst requestDate = $('Webhook').first().json.query.date;\n\n// Work hours configuration\nconst WORK_HOURS = {\n  MORNING_START: '09:00',\n  MORNING_END: '12:00',\n  AFTERNOON_START: '13:30',\n  AFTERNOON_END: '17:00'\n};\n\nconst SLOT_DURATION = 60; // minutes\n\n// Generate all possible slots\nfunction generateSlots() {\n  const slots = [];\n  \n  // Morning slots: 09:00, 10:00, 11:00\n  for (let h = 9; h < 12; h++) {\n    slots.push(`${h.toString().padStart(2, '0')}:00`);\n  }\n  \n  // Afternoon slots: 13:30, 14:30, 15:30, 16:30\n  slots.push('13:30');\n  for (let h = 14; h < 17; h++) {\n    slots.push(`${h.toString().padStart(2, '0')}:30`);\n  }\n  \n  return slots;\n}\n\n// Get all appointments from sheets\nconst appointments = $('Read Appointments').all();\n\n// Filter appointments for the requested date\nconst bookedSlots = appointments\n  .filter(item => item.json.date === requestDate && item.json.status !== 'cancelled')\n  .map(item => item.json.startTime);\n\n// Generate available slots\nconst allSlots = generateSlots();\nconst availableSlots = allSlots.filter(slot => !bookedSlots.includes(slot));\n\nreturn {\n  success: true,\n  date: requestDate,\n  slots: availableSlots,\n  bookedSlots: bookedSlots,\n  workHours: WORK_HOURS,\n  slotDuration: SLOT_DURATION\n};"
      },
